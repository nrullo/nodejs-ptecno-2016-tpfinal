extends layout

block content
  .row.our-main-content.neck(style="margin:0 -15px; height: 100%; padding: 50px 0 150px 0;background-color:#000;")
    .col-sm-6.col-sm-offset-3
      //Card
      .card.card-container.animated.flipInY
        img#profile-img.profile-img-card(src='/img/user-placeholder.png')
        //p#profile-name.profile-name-card
        form.form-signin#login-form(action="/user",method="post",role="form").form-horizontal
          span#reauth-email.reauth-email
          input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required='', autofocus='')
          input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='')
          #remember.checkbox
            label
              input(type='checkbox', value='remember-me')
              |  Remember me
          button.btn.btn-lg.btn-primary.btn-block.btn-signin(type='submit') Sign in
        // /form
        p.text-center(style="font-size: 14px; line-height:30px")
          a.forgot-password(href='#')
            | Forgot the password?
        //p.text-center(style="font-size: 14px; line-height:30px") or Login via... 
        ul.list-unstyled.social-buttons
            li
              a.btn.btn-block.btn-default(href='#') 
                i.fa.fa-facebook-square(style='padding-right:10px') 
                | Facebook
            li
              a.btn.btn-block.btn-default(href='#') 
                i.fa.fa-github-alt(style='padding-right:10px') 
                | Github
            //li
              a.btn.btn-block.btn-default(href='#') 
                i.fa.fa-google-plus(style='padding-right:10px') 
                | Google
            li
              a.btn.btn-block.btn-default(href='#') 
                i.fa.fa-linkedin-square(style='padding-right:10px') 
                | Linkedin
      // /card-container

